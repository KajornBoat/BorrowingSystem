<style>
  .kebab_dropdown {
    margin-top:-8%;
    display:none;
    position: absolute;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    background-color: solid #fff;
    border: 2px solid #bbb; 
    padding:0;
  }
   .kebab_dropdown li {
      display: block;
      background-color: solid #fff;
      padding:0;
      margin:0;
      width: 100%;
      border-bottom: 1px solid #bbb;
  }
    .kebab_dropdown a {
        text-decoration: none;
        color: #000;
        display: block;
        background-color: solid #fff;
        padding-left: 1%;
        border-bottom: none;
        transition: .3s;
  }
    .kebab_dropdown a:hover {
        background: lightgrey;
  }
    
  .kebab {
    cursor: pointer;
    position: relative;
    display: inline-block;
    width:100%;
  }

  figure {
      width: 3px;
      height: 3px;
      border-radius: 50%;
      background: gray;
      margin: 3px 0;
   }

</style>
<script>
  function kebab(id){
  var dropdown = document.getElementById(id);
  dropdown.style.display = "block";
